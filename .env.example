# 应用配置
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# 数据库
DATABASE_URL="postgresql://postgres:password@localhost:5432/digit_opus_hub?schema=public"

# Redis
REDIS_URL=redis://localhost:6379

# JWT 认证
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# LLM APIs
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# 可选：文件存储（S3 兼容）
AWS_S3_BUCKET=digit-opus-hub
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# 可选：监控和日志
SENTRY_DSN=
LOG_LEVEL=info

# 可选：邮件服务
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@digit-opus-hub.com

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Agent 配置
DEFAULT_AGENT_TIMEOUT=60000
DEFAULT_AGENT_MAX_RETRIES=3
DEFAULT_AGENT_CONCURRENT_LIMIT=5
